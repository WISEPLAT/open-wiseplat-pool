{{#if model.candidates}}
<h4>Недавно найденные блоки</h4>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Время генерации</th>
      <th>Удача</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.candidates as |block|}}
    <tr>
      <td><a href="https://wisescan.io/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
      <td>{{format-date-locale block.timestamp}}</td>
      <td>
        {{#if block.isLucky}}
        <span class="label label-success">{{format-number block.variance style='percent'}}</span>
        {{else}}
        <span class="label label-info">{{format-number block.variance style='percent'}}</span>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<h3>Пока нет недавно найденных блоков</h3>
{{/if}}